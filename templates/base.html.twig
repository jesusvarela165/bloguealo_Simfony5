<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}

<nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="{{ path('dashboard1') }}">Bloguealo ¡¡</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        
                      {% if app.user %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('RegistrarPosts') }}">Crear Post</a>
                        </li>
                        <li>
                            <a class="nav-link" href="{{ path('MisPosts') }}">Mis Post</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Cerrar sesión</a>
                         </li>                                     
                        {% else %}

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Logín</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('registro') }}">Registro</a>
                        </li>

                        {% endif %}

                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Por título, usuario" aria-label="Search">
                        <button class="btn btn-success my-2 my-sm-0" type="submit">Buscar</button>
                    </form>
                </div>
            </nav>
                        
                        <div class="container">
                            <div class="row bg-white rounded p-3 my-3">
                                  <h1> Bienvenido a tu plataforma de blogueo ¡¡¡{% if app.user %} {{ ': '}}{{ app.user.nombre }},{% endif %}</h1>
                            </div>
                        </div>
                               
{% endblock %}

{% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
