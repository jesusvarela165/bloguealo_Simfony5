{% extends 'base.html.twig' %}
{% block title %}Mis posts{% endblock %}
{% block body %}
    {{ parent() }}
    
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {% for post in posts %}
                    <div class="bg-white rounded p-3 my-3" onclick="window.location.href='{{ path('VerPost',{id:post.id}) }}'" style="cursor: pointer">
                        <h3>{{ post.titulo }}</h3>
                        <div class="my-3 bg-yellow"> <i class="fa fa-user"></i><strong> Creado por {{post.user.nombre}}</strong></div>
                        <div class=" bg-green"><i class="far fa-clock"></i> <strong>Fecha de publicaci√≥n: {{ post.fechapublicacion | date }}</strong></div>
                     <tr>
            <td class="buttons">
                <br>
                {% if app.user != null and post.user.id == app.user.id %}
                    <a href="{{ path('EditarPost', {'id':post.id})}}" button type="button" class="btn btn-info">Modificar</a>
                    <a href="{{ path('EliminarPost', {'id':post.id})}}" button type="button" class="btn btn-danger">Eliminar</a>
                {% endif %}
            </td>
            </tr>
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
{% endblock %}